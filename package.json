{
	"name": "perfect-design",
	"version": "1.0.0",
	"description": "https://github.com/k-maikou/perfect-design",
	"module": "es/index.js",
	"main": "lib/index.js",
	"scripts": {
		"start": "dumi dev",
		"build:docs": "rimraf docs-dist && dumi build",
		"eslint": "eslint packages/perfect-design/src --cache --fix --quiet --ext .js,.jsx,.ts,.tsx",
		"pre-commit": "pretty-quick --staged && pnpm eslint && pnpm stylelint",
		"stylelint": "stylelint {packages,.dumi/theme}/**/*.less --fix",
		"preview": "cross-env PREVIEW=1 pnpm build:docs && cross-env PREVIEW=1 dumi preview",
		"deploy": "rimraf node_modules/.cache/gh-pages && pnpm build:docs && gh-pages -d docs-dist"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.{js,jsx,less,md,json}": [
			"prettier --write"
		],
		"*.ts?(x)": [
			"prettier --parser=typescript --write"
		]
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.2",
		"@commitlint/config-conventional": "^17.4.2",
		"@types/react": "^18.0.27",
		"@types/react-dom": "^18.0.10",
		"@typescript-eslint/eslint-plugin": "^5.51.0",
		"@typescript-eslint/parser": "^5.51.0",
		"antd": "^5.2.0",
		"commitlint": "^17.4.2",
		"cross-env": "^7.0.3",
		"dumi": "^2.1.9",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.32.2",
		"gh-pages": "^5.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.1",
		"pnpm": "^7.27.0",
		"postcss-less": "^6.0.0",
		"prettier": "^2.8.4",
		"pretty-quick": "^3.1.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"rimraf": "^4.1.2",
		"server": "^1.0.38",
		"stylelint": "^15.0.0",
		"stylelint-config-prettier": "^9.0.4",
		"stylelint-config-standard": "^30.0.1",
		"typescript": "^4.9.5"
	},
	"peerDependencies": {
		"react": ">=16.9.0",
		"react-dom": ">=16.9.0"
	}
}
